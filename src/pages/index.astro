---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import Pagination from '../components/Pagination.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '../config/site';

const POSTS_PER_PAGE = 20;
const allPosts = (await getCollection('blog', ({ data }) => !data.draft && data.type === 'post'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const posts = allPosts.slice(0, POSTS_PER_PAGE);
---

<Layout title={`${siteConfig.title} - ${siteConfig.subtitle}`} description={siteConfig.subtitle} canonicalSlug="">
  <div class="site-header-content site-header-content--compact outer">
    <div class="site-header-inner inner">
      <p class="site-description">{siteConfig.subtitle}</p>
    </div>
  </div>
  <main id="site-main" class="site-main outer">
    <div class="inner posts">
      <div class="post-feed">
        {posts.map((entry, i) => (
          <PostCard entry={entry} isLarge={i === 0} />
        ))}
      </div>
      {totalPages > 1 && (
        <Pagination currentPage={1} totalPages={totalPages} baseUrl="/" />
      )}
    </div>
  </main>
</Layout>
