---
import Layout from '../../../layouts/Layout.astro';
import PostCard from '../../../components/PostCard.astro';
import Pagination from '../../../components/Pagination.astro';
import { getCollection } from 'astro:content';

const POSTS_PER_PAGE = 20;

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => !data.draft && data.type === 'post');
  const totalPages = Math.ceil(allPosts.length / 20);
  return Array.from({ length: Math.max(0, totalPages - 1) }, (_, i) => ({
    params: { page: String(i + 2) },
    props: { page: i + 2 },
  }));
}

const { page } = Astro.props;
const allPosts = (await getCollection('blog', ({ data }) => !data.draft && data.type === 'post'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);
const posts = allPosts.slice((page - 1) * POSTS_PER_PAGE, page * POSTS_PER_PAGE);
---

<Layout title={`文章归档 - 第${page}页 - 厦门暗游网络科技有限公司`} description="博客文章列表">
  <main id="site-main" class="site-main outer">
    <div class="inner posts">
      <h1 class="feed-title">文章归档</h1>
      <div class="post-feed">
        {posts.map((entry) => (
          <PostCard entry={entry} />
        ))}
      </div>
      <Pagination currentPage={page} totalPages={totalPages} baseUrl="/blog/" />
    </div>
  </main>
</Layout>
