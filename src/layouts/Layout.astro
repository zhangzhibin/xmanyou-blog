---
import '../styles/casper.css';
import '../styles/overrides.css';
import { siteConfig } from '../config/site';

const adsenseClient = siteConfig.adsenseClient;
const ga4Id = siteConfig.ga4MeasurementId;

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalSlug?: string;
}

const { title, description = '', image, canonicalSlug } = Astro.props;
const site = import.meta.env.SITE || 'https://xmanyou.com';
const canonicalUrl = canonicalSlug ? `${site}/${canonicalSlug}/` : undefined;
const ogImage = image ? (image.startsWith('http') ? image : `${site.replace(/\/$/, '')}${image.startsWith('/') ? image : '/' + image}`) : undefined;
const nav = siteConfig.navigation;
---

<!DOCTYPE html>
<html lang="zh-CN" class="no-infinite-scroll">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {ogImage && <meta property="og:image" content={ogImage} />}
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    {adsenseClient && (
      <script
        async
        src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`}
        crossorigin="anonymous"
      />
    )}
    {ga4Id && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${ga4Id}`} />
        <script is:inline set:html={`window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config','${ga4Id}');`} />
      </>
    )}
  </head>
  <body class="is-head-left-logo has-serif-title">
    <div class="viewport">
      <header id="gh-head" class="gh-head outer">
        <div class="gh-head-inner inner">
          <div class="gh-head-brand">
            <a class="gh-head-logo no-image" href="/">{siteConfig.title}</a>
            <button class="gh-burger" type="button" aria-label="菜单"></button>
          </div>
          <nav class="gh-head-menu">
            <ul class="nav">
              {nav.map((item) => (
                <li><a href={item.url}>{item.label}</a></li>
              ))}
            </ul>
          </nav>
          <div class="gh-head-actions"></div>
        </div>
      </header>
      <div class="site-content">
        <slot />
      </div>
      <footer class="site-footer outer">
        <div class="inner site-footer-inner">
          <nav class="site-footer-nav">
            <ul>
              {nav.map((item) => (
                <li><a href={item.url}>{item.label}</a></li>
              ))}
            </ul>
          </nav>
          <div class="site-footer-meta">
            <span class="copyright"><a href="/">{siteConfig.title}</a> &copy; {new Date().getFullYear()}</span>
            <span class="site-footer-icp">
              <a href="https://beian.miit.gov.cn/" target="_blank" rel="noopener">闽ICP备17029130号</a>
            </span>
            <span class="site-footer-powered">
              <a href="https://astro.build/" target="_blank" rel="noopener">Powered by Astro</a>
            </span>
          </div>
        </div>
      </footer>
    </div>
    <script is:inline>
      document.querySelector('.gh-burger')?.addEventListener('click', function () {
        document.body.classList.toggle('gh-head-open');
      });
    </script>
  </body>
</html>
