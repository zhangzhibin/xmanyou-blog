---
import '../styles/casper.css';
import '../styles/overrides.css';
import { siteConfig } from '../config/site';

const adsenseClient = siteConfig.adsenseClient;
const ga4Id = siteConfig.ga4MeasurementId;

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalSlug?: string;
  /** 页面类型：文章页应传 "article" 以正确设置 og:type */
  ogType?: 'website' | 'article';
  /** 文章发布时间 (ISO 8601)，仅 ogType=article 时使用 */
  articlePublishedTime?: string;
  /** 文章修改时间 (ISO 8601)，可选 */
  articleModifiedTime?: string;
  /** 文章作者，仅 ogType=article 时使用 */
  articleAuthor?: string;
  /** 文章标签，仅 ogType=article 时使用 */
  articleTags?: string[];
}

const { title, description = '', image, canonicalSlug, ogType = 'website', articlePublishedTime, articleModifiedTime, articleAuthor, articleTags } = Astro.props;
const site = import.meta.env.SITE || 'https://xmanyou.com';
const base = site.replace(/\/$/, '');
const canonicalUrl = canonicalSlug !== undefined ? (canonicalSlug ? `${base}/${canonicalSlug}/` : `${base}/`) : undefined;
const ogImage = image ? (image.startsWith('http') ? image : `${site.replace(/\/$/, '')}${image.startsWith('/') ? image : '/' + image}`) : undefined;
const nav = siteConfig.navigation;
---

<!DOCTYPE html>
<html lang="zh-CN" class="no-infinite-scroll">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <meta property="og:site_name" content={siteConfig.title} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    {ogType === 'article' && articlePublishedTime && <meta property="article:published_time" content={articlePublishedTime} />}
    {ogType === 'article' && articleModifiedTime && <meta property="article:modified_time" content={articleModifiedTime} />}
    {ogType === 'article' && articleAuthor && <meta property="article:author" content={articleAuthor} />}
    {ogType === 'article' && articleTags?.length ? articleTags.map((tag) => <meta property="article:tag" content={tag} />) : null}
    {adsenseClient && (
      <script
        async
        src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`}
        crossorigin="anonymous"
      />
    )}
    {ga4Id && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${ga4Id}`} />
        <script is:inline set:html={`window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config','${ga4Id}');`} />
      </>
    )}
  </head>
  <body class="is-head-left-logo">
    <div class="viewport">
      <header id="gh-head" class="gh-head outer">
        <div class="gh-head-inner inner">
          <div class="gh-head-brand">
            <a class="gh-head-logo no-image" href="/">{siteConfig.title}</a>
            <button class="gh-burger" type="button" aria-label="菜单"></button>
          </div>
          <nav class="gh-head-menu">
            <ul class="nav">
              {nav.map((item) => (
                <li><a href={item.url}>{item.label}</a></li>
              ))}
            </ul>
          </nav>
          <div class="gh-head-actions"></div>
        </div>
      </header>
      <div class="site-content">
        <slot />
      </div>
      <footer class="site-footer outer">
        <div class="inner site-footer-inner">
          <nav class="site-footer-nav">
            <ul>
              {nav.map((item) => (
                <li><a href={item.url}>{item.label}</a></li>
              ))}
            </ul>
          </nav>
          <section class="site-footer-build-with-ai" aria-label="Build with AI">
            <h3 class="site-footer-build-with-ai-title">Build with AI</h3>
            <ul>
              {siteConfig.buildWithAi.map((item) => (
                <li><a href={item.url} target="_blank" rel="noopener">{item.label}</a></li>
              ))}
            </ul>
          </section>
          <div class="site-footer-meta">
            <span class="copyright"><a href="/">{siteConfig.title}</a> &copy; {new Date().getFullYear()}</span>
            <span class="site-footer-icp">
              <a href="https://beian.miit.gov.cn/" target="_blank" rel="noopener">闽ICP备17029130号</a>
            </span>
            <span class="site-footer-powered">
              <a href="https://astro.build/" target="_blank" rel="noopener">Powered by Astro</a>
            </span>
          </div>
        </div>
      </footer>
    </div>
    <script is:inline>
      document.querySelector('.gh-burger')?.addEventListener('click', function () {
        document.body.classList.toggle('gh-head-open');
      });

      (function () {
        function initCopyCode() {
          var pres = document.querySelectorAll('.gh-content pre, .gh-canvas pre');
          pres.forEach(function (pre) {
            if (pre.closest('.copy-code-wrapper')) return;
            var wrapper = document.createElement('div');
            wrapper.className = 'copy-code-wrapper';
            pre.parentNode.insertBefore(wrapper, pre);
            wrapper.appendChild(pre);

            var btn = document.createElement('button');
            btn.type = 'button';
            btn.className = 'copy-code-btn';
            btn.textContent = '复制';
            btn.setAttribute('aria-label', '复制代码');
            wrapper.appendChild(btn);

            btn.addEventListener('click', function () {
              var code = pre.querySelector('code');
              var text = (code || pre).innerText || (code || pre).textContent || '';
              navigator.clipboard.writeText(text).then(
                function () {
                  btn.textContent = '已复制';
                  btn.classList.add('copied');
                  setTimeout(function () {
                    btn.textContent = '复制';
                    btn.classList.remove('copied');
                  }, 1800);
                },
                function () {
                  btn.textContent = '复制失败';
                  setTimeout(function () { btn.textContent = '复制'; }, 1500);
                }
              );
            });
          });
        }
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initCopyCode);
        } else {
          initCopyCode();
        }
      })();
    </script>
  </body>
</html>
